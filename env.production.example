# 生产环境配置示例
# 复制此文件为 .env 并根据实际情况修改

# 基本配置
PROJECT_NAME=XBoard Modern
VERSION=1.0.0
DEBUG=False
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# 域名配置（重要！VPS部署时必须配置）
DOMAIN_NAME=yourdomain.com
SSL_ENABLED=true
FRONTEND_DOMAIN=yourdomain.com

# 数据库配置
DATABASE_URL=sqlite:///./xboard.db

# CORS配置（会自动使用DOMAIN_NAME）
BACKEND_CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# 邮件配置
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USERNAME=your-email@yourdomain.com
SMTP_PASSWORD=your-email-password
SMTP_ENCRYPTION=tls
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=XBoard Modern

# 支付配置
# 支付宝
ALIPAY_APP_ID=your-alipay-app-id
ALIPAY_PRIVATE_KEY=your-alipay-private-key
ALIPAY_PUBLIC_KEY=your-alipay-public-key
ALIPAY_GATEWAY=https://openapi.alipay.com/gateway.do

# 微信支付
WECHAT_APP_ID=your-wechat-app-id
WECHAT_MCH_ID=your-wechat-mch-id
WECHAT_API_KEY=your-wechat-api-key

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_SECRET=your-paypal-secret
PAYPAL_MODE=live

# Stripe
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# 安全配置
# 启用HTTPS
FORCE_HTTPS=True
# 会话超时时间（分钟）
SESSION_TIMEOUT=30
# 密码最小长度
MIN_PASSWORD_LENGTH=8
# 最大登录尝试次数
MAX_LOGIN_ATTEMPTS=5
# 账户锁定时间（分钟）
ACCOUNT_LOCKOUT_TIME=15

# 备份配置
# 自动备份间隔（小时）
AUTO_BACKUP_INTERVAL=24
# 保留备份数量
MAX_BACKUP_FILES=30
# 备份目录
BACKUP_DIR=uploads/backups

# 日志配置
# 日志级别
LOG_LEVEL=INFO
# 日志保留天数
LOG_RETENTION_DAYS=30
# 日志目录
LOG_DIR=uploads/logs

# 监控配置
# 监控数据保留天数
MONITORING_RETENTION_DAYS=7
# 告警阈值
CPU_THRESHOLD=80
MEMORY_THRESHOLD=85
DISK_THRESHOLD=90

# 速率限制配置
# 登录接口限制（次/分钟）
LOGIN_RATE_LIMIT=10
# API接口限制（次/分钟）
API_RATE_LIMIT=100
# 管理员接口限制（次/分钟）
ADMIN_RATE_LIMIT=200

# 缓存配置
# 启用Redis缓存
ENABLE_REDIS=False
# Redis连接URL
REDIS_URL=redis://localhost:6379/0

# 文件上传配置
# 最大文件大小（MB）
MAX_FILE_SIZE=10
# 允许的文件类型
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# 通知配置
# 启用邮件通知
ENABLE_EMAIL_NOTIFICATIONS=True
# 启用系统通知
ENABLE_SYSTEM_NOTIFICATIONS=True

# 维护模式
MAINTENANCE_MODE=False
MAINTENANCE_MESSAGE=系统维护中，请稍后再试

# 性能配置
# 数据库连接池大小
DB_POOL_SIZE=10
# 数据库连接超时（秒）
DB_TIMEOUT=30
# 请求超时（秒）
REQUEST_TIMEOUT=30

# 安全头配置
# 启用安全头
ENABLE_SECURITY_HEADERS=True
# HSTS最大年龄（秒）
HSTS_MAX_AGE=31536000
# CSP策略
CSP_POLICY=default-src 'self'

# 审计日志
# 启用审计日志
ENABLE_AUDIT_LOG=True
# 审计日志保留天数
AUDIT_LOG_RETENTION_DAYS=90
