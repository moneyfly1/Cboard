# ================================
# XBoard Modern 环境变量配置
# ================================

# ================================
# 数据库配置
# ================================

# 开发环境 - SQLite (默认)
DATABASE_URL=sqlite:///./xboard.db

# 生产环境 - PostgreSQL (推荐)
# DATABASE_URL=postgresql://username:password@localhost:5432/xboard_db

# 生产环境 - MySQL (宝塔面板常用)
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/xboard_db

# ================================
# 应用配置
# ================================

# 应用名称
APP_NAME=XBoard Modern

# 应用版本
APP_VERSION=1.0.0

# 调试模式 (开发环境: True, 生产环境: False)
DEBUG=True

# 主机地址
HOST=0.0.0.0

# 端口
PORT=8000

# 工作进程数
WORKERS=4

# ================================
# 安全配置
# ================================

# JWT密钥 (请修改为随机字符串)
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# JWT算法
JWT_ALGORITHM=HS256

# JWT过期时间 (小时)
JWT_EXPIRE_HOURS=24

# 密码加密轮数
BCRYPT_ROUNDS=12

# CORS配置
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "https://yourdomain.com"]

# ================================
# 邮件配置
# ================================

# SMTP服务器
SMTP_HOST=smtp.qq.com

# SMTP端口
SMTP_PORT=587

# SMTP用户名 (邮箱地址)
SMTP_USERNAME=your-email@qq.com

# SMTP密码 (邮箱授权码)
SMTP_PASSWORD=your-email-password

# 加密方式 (tls, ssl, none)
SMTP_ENCRYPTION=tls

# 发件人邮箱
SMTP_FROM_EMAIL=your-email@qq.com

# 发件人名称
SMTP_FROM_NAME=XBoard System

# ================================
# Redis配置 (缓存)
# ================================

# Redis服务器地址
REDIS_HOST=localhost

# Redis端口
REDIS_PORT=6379

# Redis密码 (如果有)
REDIS_PASSWORD=

# Redis数据库编号
REDIS_DB=0

# ================================
# 文件上传配置
# ================================

# 上传文件目录
UPLOAD_DIR=./uploads

# 最大文件大小 (MB)
MAX_FILE_SIZE=10

# 允许的文件类型
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ================================
# 日志配置
# ================================

# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE=./logs/xboard.log

# 日志格式
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ================================
# 宝塔面板配置
# ================================

# 宝塔面板域名
BT_DOMAIN=yourdomain.com

# 宝塔面板端口
BT_PORT=8888

# 宝塔面板用户名
BT_USERNAME=admin

# 宝塔面板密码
BT_PASSWORD=your-bt-password

# SSL证书路径 (如果使用HTTPS)
SSL_CERT_PATH=/www/server/panel/vhost/cert/yourdomain.com/fullchain.pem
SSL_KEY_PATH=/www/server/panel/vhost/cert/yourdomain.com/privkey.pem

# ================================
# 系统设置默认值
# ================================

# 网站名称
SITE_NAME=XBoard Modern

# 网站描述
SITE_DESCRIPTION=高性能面板系统

# 网站关键词
SITE_KEYWORDS=面板,订阅,管理

# 网站Logo
SITE_LOGO=/static/images/logo.png

# 网站图标
SITE_FAVICON=/static/images/favicon.ico

# 默认语言
DEFAULT_LANGUAGE=zh-CN

# 时区
TIMEZONE=Asia/Shanghai

# ================================
# 注册设置默认值
# ================================

# 是否允许注册
ALLOW_REGISTRATION=true

# 是否需要邮箱验证
REQUIRE_EMAIL_VERIFICATION=true

# 是否只允许QQ邮箱
ALLOW_QQ_EMAIL_ONLY=true

# 最小密码长度
MIN_PASSWORD_LENGTH=8

# 最大登录尝试次数
MAX_LOGIN_ATTEMPTS=5

# 登录锁定时间 (分钟)
LOGIN_LOCKOUT_TIME=30

# ================================
# 支付设置默认值
# ================================

# 是否启用支付
ENABLE_PAYMENT=true

# 默认支付方式
DEFAULT_PAYMENT_METHOD=alipay

# 默认货币
DEFAULT_CURRENCY=CNY

# 支付超时时间 (分钟)
PAYMENT_TIMEOUT=30

# ================================
# 主题设置默认值
# ================================

# 默认主题
DEFAULT_THEME=default

# 可用主题
AVAILABLE_THEMES=default,dark,blue,green

# ================================
# 性能设置默认值
# ================================

# 缓存过期时间 (秒)
CACHE_EXPIRE_TIME=3600

# 会话过期时间 (分钟)
SESSION_EXPIRE_TIME=1440

# 最大并发连接数
MAX_CONNECTIONS=1000

# 请求超时时间 (秒)
REQUEST_TIMEOUT=30 